<% layout('layouts/boilerplate')%>
<div class="row ">
    <h2 class="text-center">Edit Job</h2>
    <div class="col-md-6 offset-md-3  mb-3">
        <form action="/farmer/jobs/<%=job._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Job Name</label>
                <input class="form-control" type="text" id="name" name="job[name]" value="<%= job.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Wage / day</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label"><span class="notranslate">&#8377;</span></span>
                    <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="job[wage]" value="<%= job.wage %>" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="quantity">Number of Workers</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">N</span>
                    <input type="number" class="form-control" id="quantity" placeholder="0" aria-label="quantity"
                        aria-describedby="quantity-label" name="job[quantity]" value="<%= job.quantity%>" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="gender">Gender Requirements</label>
                <select class="form-select" name="job[gender]"  aria-label="Gender">
                    <option selected><%= job.gender%></option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Any</option>
                </select>
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="description">Job Description</label>
                <textarea class="form-control" type="text" id="description" name="job[description]"  required><%= job.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="address">Farm Address</label>
                <input class="form-control" type="text" id="address" name="job[address]" value="<%= job.address %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="name">City/Village</label>
                <input class="form-control" type="text" id="city" name="job[city]" value="<%= job.city %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

    
            <div class="mb-3">
                <label class="form-label" for="skill">Skill Requirements</label>
                <input class="form-control" type="text" id="skill">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
    
            <div class="mb-3">
                <button class="btn btn-info" id="btnSkill1" onclick="addSkill();" type="button">Add Skill</button>
            </div>
    
        
            <input class="form-control d-none" type="text" id="skillFinal" name="job[skills]">
              
    
            <div class="mb-3" id="allSkills">
                <% let skills = job.skills.split(",").slice(0,-1); %>

                <%for (let skill of skills) { %>
                    <button class = "btn btn-warning btnSkill rounded-pill ml-3 mb-3 px-3" type="button" ><%= skill %></button>

                <% } %> 
               
            </div>
    

            
            <div class="mb-3">
                <button class="btn btn-success" onclick="collectSkill();" >Update Job</button>
            </div>
        </form>
      
    </div>
</div>