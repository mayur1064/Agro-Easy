<% layout('layouts/boilerplate')%>
<div class="row" style="margin-bottom: 10vh">
  <h1 class="text-center">New product</h1>
  <div class="col-6 offset-3">
    <form
      action="/supplier/products"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Product Name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="product[name]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Product Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label" class="notranslate">&#8377;</span>
          <input
            type="number"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="product[price]"
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="quantity">Product Quantity</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            id="quantity"
            placeholder="0"
            aria-label="quantity"
            aria-describedby="quantity-label"
            name="product[quantity]"
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="product[description]"
          required
          style="white-space: pre-wrap;"
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Choose image(s)...</span
            >
            <span class="form-file-button">Browse</span>
          </label>
        </div>
      </div>
      <div class="mb-3 text-center">
        <button class="btn btn-success">Add Product</button>
      </div>
    </form>
  </div>
</div>
